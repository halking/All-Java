  </resultMap>
  
  <select id="search" parameterType="HashMap" resultMap="BaseResultMap">
		select * from mass_conversation
		<where>
			wechat_id = #{wechatId}
			<if test="conversationId != null">
				and conversation_id = #{conversationId}
			</if>
		</where>
		<if test="sortName != null">
			order by ${sortName}
			<if test="sortDir != null">
				${sortDir}
			</if>
			<if test="sortDir == null">
				desc
			</if>
		</if>
		<if test="sortName == null">
			order by id desc
		</if>
	</select>
  
  
</mapper>
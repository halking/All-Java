	<select id="getAllGroupedBusiness" resultMap="ProvinceListResultMap">
		select b.province, ai.c_name as name from business b left join area_info ai on ai.id = b.province where b.status = 1 and b.province=5 and b.business_name not like '%机场%' and b.business_name not like '%奥特莱斯%' group by province
	</select>

	<select id="searchDirect" resultMap="BusinessListResultMap">
		select * from business as b
		left join area_info as ai on ai.c_name = SUBSTRING(b.district, 1, CHAR_LENGTH(b.district)-1)
		<where>
			1=1 and b.province = b.city
			<if test="wechatId != null">
			b.wechat_id = #{wechatId}
			</if>
			<if test="province != null">
			and b.province = #{province}
			</if>
			<if test="city != null">
				and ai.id = #{city}
			</if>
		</where>
		<if test="sortName != null">
			order by ${sortName}
			<if test="sortDir != null">
				${sortDir}
			</if>
			<if test="sortDir == null">
				desc
			</if>
		</if>
		<if test="sortName == null">
			order by b.check_status asc
		</if>

  <select id="search" resultMap="BusinessListResultMap">
   	<if test="lat != null and lng != null">
   		SELECT
		*,
		ROUND(
			6378.138 * 2 * ASIN(
				SQRT(
					POW(
						SIN(
							(
								#{lat} * PI() / 180 - latitude * PI() / 180
							) / 2
						),
						2
					) + COS(#{lat} * PI() / 180) * COS(latitude * PI() / 180) * POW(
						SIN(
							(
								#{lng} * PI() / 180 - longitude * PI() / 180
							) / 2
						),
						2
					)
				)
			) * 1000
		) as distance
		from
			business
		<where>
			latitude is not null and status = 1
			<if test="wechatId != null">
				and wechat_id = #{wechatId}
			</if>
			<if test="status != null">
	   			 and status = #{status}
	   		</if>
	   		<if test="province != null">
	   			and province = #{province}
	   		</if>
	   		<if test="city != null">
	   			and city = #{city}
	   		</if>
	   		<if test="query != null">
	   			and (business_name like CONCAT('%',#{query},'%')
	   			or business_code like CONCAT('%',#{query},'%')
	   			or address like CONCAT('%',#{query},'%'))
	   		</if>
		</where>
		order by distance
   	</if>
   	<if test="lat == null or lng == null">
   		select * from business
	   	<where>
			status = 1
			<if test="wechatId != null">
				and wechat_id = #{wechatId}
			</if>
	   		<if test="status != null">
	   			 and status = #{status}
	   		</if>
	   		<if test="province != null">
	   			and province = #{province}
	   		</if>
	   		<if test="city != null">
	   			and city = #{city}
	   		</if>
	   		<if test="query != null">
	   			and (business_name like CONCAT('%',#{query},'%')
	   			or business_code like CONCAT('%',#{query},'%')  
	   			or address like CONCAT('%',#{query},'%'))
	   		</if>
	    </where>
	    <if test="sortName != null">
			order by ${sortName}
			<if test="sortDir != null">
				${sortDir}
			</if>
			<if test="sortDir == null">
				desc
			</if>
		</if>
		<if test="sortName == null">
			order by id desc
		</if>
   	</if>
  </select>
  
  <select id="searchByLngLat" resultMap="BusinessListResultMap">
   	SELECT
	*,
	ROUND(
		6378.138 * 2 * ASIN(
			SQRT(
				POW(
					SIN(
						(
							#{lat} * PI() / 180 - latitude * PI() / 180
						) / 2
					),
					2
				) + COS(#{lat} * PI() / 180) * COS(latitude * PI() / 180) * POW(
					SIN(
						(
							#{lng} * PI() / 180 - longitude * PI() / 180
						) / 2
					),
					2
				)
			)
		) * 1000
	) AS distance
	FROM
		business
	WHERE
		latitude IS NOT NULL AND `status`=1
	  <if test="wechatId != null">
		  and wechat_id = #{wechatId}
	  </if>
	ORDER BY
		distance
	LIMIT 0,#{size};
  </select>
  
